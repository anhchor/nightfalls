<main class="nf">
  <section class="nf__intro">
    <h1 class="nf__title">{{ title }}</h1>
    {% comment %} <div class="nf__gradient"></div> {% endcomment %}
    <h2 class="nf__subtitle">Summary</h2>

    <p class="nf__summary">{{ excerpt }}</p>
    <dl class="nf__info">
      <div>
        <dt>Champions</dt>
        {% for champions in champions %}
          <dd>
            <img src="/svg/{{ champions }}.svg" class="icon"> {{ champions }}
          </dd>
        {% endfor %}
      </div>
      
      <div>
        <dt>Shields</dt>
        {% for shields in shields %}
          <dd>
            <img src="/svg/{{ shields }}.svg" class="icon"> {{ shields }}
          </dd>
        {% endfor %}
      </div>
      
      {% if burn %}
        <div>
          <dt>Burn</dt>
          <dd>
            <img src="/svg/{{ burn }}.svg"> {{ burn }}
            <span>+25% dmg dealt
            <br>+50% dmg received</span>
          </dd>
        </div>
      {% endif %}
    </dl>
    <div class="callout">
      <p class="callout__title">Current Nightfall (July 5â€“12)</p>
      <ul>
        <li>Drops <a href="https://www.light.gg/db/items/1387987271/silicon-neuroma-adept/">Silicon Neuroma</a> (stasis sniper rifle)</li>
        <li>Double rewards</li>
      </ul>
    </div>
    <img src="/img/{{ image }}" alt="" class="nf__image">
  </section>

  <section class="nf__content text">

    <h2>Walkthrough</h2>
    {{ content }}
  </section>
</main>